<h3>Title: <%= @blog.title %></h3>
<h3>Category: <%= @blog.category %></h3>
<h3>Content: <%= @blog.content %></h3>

<div>
	<h2>Comment:</h2>
	<form action="/create_comment" method="post">
		<label>Title</label>
		<input type="text" name="comment_title">
		<label>Body</label>
		<input type="text" name="comment_body">
		<input type="submit">
	</form>
</div>

<h2><%= @blog.title  %></h2>

	<div class="comments">
		<% @blog.comments.each do |comment| %>
		<div class="comment">
		<%= comment.user.username %> says that <%= comment.body  %>
	</div>
	<% end %>

	</div>